{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "lib": ["es2015"],
        "outDir": "build",
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "build"],
    "compileOnSave": true
}
